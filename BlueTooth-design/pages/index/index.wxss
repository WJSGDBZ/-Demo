ec-canvas {
  width: 100%;
  height: 100vh;
}
cover-image{
  height: 80rpx;
  width: 80rpx;
  margin: 0 auto;
}
.container{
  position: relative;
}
.navContainer{
  position: absolute;
  margin: 0 auto;
  top:30%;
  display: flex;
  flex-direction: column;
  width: 90%;
  height: 800rpx;
}
.cover{
  width: 90%;
  margin: 0 auto;
  height: 700rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  overflow: auto;
  border: 1px solid #405f80;
  border-radius: 5px;
  color: #405f80;
  font-weight: bold;
}
.device_list{
  width: 90%;
  margin-left: 5%;
  margin-bottom: 10rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  border:1px solid black;
  align-items: center;
  justify-content: space-between;
}
.message{
  display: flex;
  flex-direction: column;
}
cover-view.title{
  height: 70rpx;
  margin:0 auto;
  margin-bottom: 10rpx;
}
cover-view.connection{
  color: green;
}
.research{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.btn {
  border: 1px solid #405f80;
  border-radius: 5px;
  color: #405f80;
  width: 90%;
  height: auto;
  margin-top: 10rpx;
  line-height: 80rpx;
  background-color: #fff;
  opacity: 0.8;
  text-align: center;
  font-weight: bold;
}
.research input{
  border: 1px #b6b6b6 solid;
  width: 87%;
  margin: 15rpx 24rpx;
  padding: 12rpx;
  border-radius: 5px;
}
.fixed{
  position: absolute;
  width: 40px;
  height: 40px;
  top: 90vh;
  right: 10px;
}